          .main {margin: 0 auto; width: 100%;}
      }
      li {margin-left: 2em;}
      form {padding: 1em; border: #eee 1px solid; }
      form {
            overflow: hidden;
            display: inline-block; /* Trigger "hasLayout" in IE */
            display: block;        /* Set element back to block */
      }
      form > button {
          padding: .5em 2em;
          cursor:pointer;
          border-radius:.2em;
          -moz-border-radius:.2em;
          -webkit-border-radius:.2em;}
      textarea {padding:.5em;}
    </style>
  </head>
